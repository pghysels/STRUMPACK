CC=@STRUMPACK_C_COMPILER@
CXX=@STRUMPACK_CXX_COMPILER@
CPPFLAGS=@STRUMPACK_ALL_INCLUDE_DIRS@

CFLAGS=@STRUMPACK_ALL_C_FLAGS@
